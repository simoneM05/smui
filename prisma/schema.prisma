generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  STATIC
  MOTION
  KIT
}

model Component {
  id          Int              @id @default(autoincrement())
  name        String            
  slug        String           @unique 
  description String
  code        String           @db.Text
  npm         String
  bun         String
  pnpm        String
  yarn        String
  demoName    String
  category    Category @default(STATIC)
  
  examples    ExampleComponent[] @relation("ComponentExamples")
  credits CreditComponent[] @relation("ComponentCredit")
}

model ExampleComponent {
  id          Int       @id @default(autoincrement())
  componentId Int
  name        String
  slug        String?   @unique
  code        String    @db.Text
  npm         String
  bun         String
  pnpm        String
  yarn        String
  demoName    String
  
  component   Component @relation("ComponentExamples", fields: [componentId], references: [id])
}

model CreditComponent{
 id Int @id @default(autoincrement())
 href String
 label String
 componentId Int
 component Component? @relation("ComponentCredit", fields: [componentId],references: [id])
}